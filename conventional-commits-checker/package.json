{
  "name": "conventional-commits-checker",
  "version": "0.0.0",
  "private": true,
  "description": "This action checks the commit messages if they are conventional commit compliant",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "prepare": "npm run build && ncc build -o dist --source-map --license licenses.txt",
    "test": "jest",
    "all": "npm run build && npm run format && npm run lint && npm run prepare && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/actions/typescript-action.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup",
    "conventional-commits"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/github": "^5.1.1",
    "@conventional-commits/parser": "^0.4.1",
    "@octokit/webhooks-types": "^6.7.0"
  },
  "devDependencies": {
    "@types/node": "^18.11.9",
    "@typescript-eslint/parser": "^5.42.1",
    "@vercel/ncc": "^0.34.0",
    "eslint": "^8.27.0",
    "eslint-plugin-github": "^4.4.1",
    "eslint-plugin-jest": "^27.1.5",
    "jest": "^29.3.1",
    "js-yaml": "^4.1.0",
    "prettier": "^2.7.1",
    "ts-jest": "^29.0.3",
    "typescript": "^4.8.4"
  }
}
